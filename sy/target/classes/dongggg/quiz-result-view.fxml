<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.control.*?>

<!--전체 배경-->
<VBox xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="dongggg.QuizResultController"
      spacing="20"
      style="-fx-background-color:F8F7FF; -fx-padding: 24;">

      <!--상단 텍스트 부분-->
    <HBox spacing="5">
        <Label text="채점"
               style="-fx-font-size: 40px; -fx-font-weight: 700; -fx-text-fill: #a855dd;" />
        <Pane HBox.hgrow="ALWAYS"/>
        <Button text="←"
                onAction="#goBack"
                style="-fx-background-color: white;
                       -fx-border-color: #e8dff5;
                       -fx-border-radius: 12;
                       -fx-background-radius: 12;
                       -fx-text-fill: #a855dd;
                       -fx-padding: 8 12;" />
    </HBox>

    <Label text="정답과 비교하여 채점하세요"
           style="-fx-text-fill: #d9b5ff; -fx-font-size: 14px;" />

<!--최종 점수 박스 부분-->
    <VBox spacing="10" 
          style="-fx-background-color: white;
                 -fx-background-radius: 24;
                 -fx-border-color: #e8dff5;
                 -fx-border-radius: 24;
                 -fx-border-width: 2;
                 -fx-padding: 28 32;
                 -fx-effect: dropshadow(gaussian, rgba(168,85,221,0.15), 22, 0.2, 0, 6);">

        <Label text="최종 점수"
               style="-fx-text-fill: #d9b5ff; -fx-font-size: 14px;" />

        <Label fx:id="scorePercentLabel"
               text="0%"
               style="-fx-font-size: 48px; -fx-font-weight: 700; -fx-text-fill: #a855dd;" />

        <Label fx:id="scoreSummaryLabel"
               text="0 / 5개 정답"
               style="-fx-font-size: 16px; -fx-text-fill: #3b275b; -fx-font-weight: 500;" />

        <ProgressBar fx:id="scoreBar"
                     prefHeight="12"
                     prefWidth="280"
                     style="-fx-accent: #a855dd; -fx-background-color: #f5f0fb;" />
    </VBox>

<!--하단에 자가채점 부분-->
    <ScrollPane fitToWidth="true"
                style="-fx-background-color: #F8F7FF;">
        <VBox fx:id="resultListBox"
              spacing="18"
              style="-fx-padding: 10; -fx-background-color: #F8F7FF;">
        </VBox>
    </ScrollPane>

<!--맨 하단 버튼 두 개-->
    <HBox spacing="5">

        <Button fx:id="com" text="완료"
                styleClass="go-dash"
                onAction="#goDashboard"
                HBox.hgrow="ALWAYS"/>
    </HBox>

</VBox>
